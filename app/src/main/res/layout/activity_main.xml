<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/anim_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Rotation Demo"
        app:layout_constraintTop_toBottomOf="@id/anim_label"
        android:id="@+id/rotation.demo.button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Interpolation Demo"
        app:layout_constraintTop_toBottomOf="@id/rotation.demo.button"
        android:id="@+id/interpolation.demo.button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Scene Transition"
        app:layout_constraintTop_toBottomOf="@id/interpolation.demo.button"
        android:id="@+id/scene.transition.button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Form Animation"
        app:layout_constraintTop_toBottomOf="@id/scene.transition.button"
        android:id="@+id/form.animation.button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>